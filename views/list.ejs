<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <table style="width: 80%;border-style: solid; text-align: center;" border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>
        <tbody>
            <%if (data.length >0){ %>
            <% data.forEach(function(row){ %>
                <tr>
                    <td><%= row._id %></td>
                    <td><%= row.name %></td>
                    <td><%= row.email %></td>
                    <td><%= row.pwd %></td>
                    <td><a href="/users/edit/?id=<%= row._id %>"><img src="/img/edit.png"></a></td>
                    <td><a href="/users/del/?id=<%= row._id %>"><img src="/img/delete.png"></a></td>
                </tr>
            <% })}else{ %>
            <tr>
                <td colspan="6">NO Record Found</td>
            </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>